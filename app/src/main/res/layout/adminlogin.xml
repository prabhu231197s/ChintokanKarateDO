<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Login"
        android:textStyle="bold|italic"
        android:textSize="60dp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_marginTop="122dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />
    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/floatLabeledEditText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/adminuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/floatLabeledEditText"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/editText2"
            android:ems="10"
            android:hint="Enter your admin email id" />
    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <com.wrapp.floatlabelededittext.FloatLabeledEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/floatLabeledEditText"
        android:layout_alignStart="@+id/floatLabeledEditText"
        android:layout_marginTop="30dp"
        android:id="@+id/floatLabeledEditText2">

        <EditText
            android:id="@+id/adminpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Enter your password"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="163dp" />

    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/adminloginbutton"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/floatLabeledEditText2"
        android:layout_centerHorizontal="true"
        android:onClick="onAdminLoginClick"
        android:layout_marginTop="59dp" />

</RelativeLayout>